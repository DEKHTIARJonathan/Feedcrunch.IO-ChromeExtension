{
    "author": "Jonathan DEKHTIAR",
    "name": "Feedcrunch.IO",
    "short_name": "Feedcrunch",
    "description": "Feedcrunch.IO - Chrome Extension",
    "manifest_version": 2,
    "version": "1.0.3",
    "icons": {
        "16": "img/icon.png",
        "48": "img/iconLauncher.png",
        "128": "img/iconStore.png"
    },
    "background": {
        "scripts": [
            "app/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "img/icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "plugins/js/jquery.min.js",
                "plugins/js/jquery.validate.min.js",
                "plugins/js/materialize.min.js",
                "plugins/js/sweetalert2.min.js",
                "plugins/js/typeahead.bundle.min.js",
                "plugins/js/materialize-tags.min.js",
                "app/content_scripts.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "web_accessible_resources": [
        "templates/*.html"
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "cookies",
        "storage",
        "*://*/*"
    ]
}
